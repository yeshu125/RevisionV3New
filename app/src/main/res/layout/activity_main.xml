<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a">
    <!---header align to top -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="REVISION"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#183ac2"/>

    <Spinner
        android:id="@+id/regulation"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#ffffff"></Spinner>
    <Spinner
    android:id="@+id/course"
    android:layout_width="280dp"
    android:layout_height="40dp"
      android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="30dp"
    android:background="#ffffff"
    android:layout_centerHorizontal="true"
        android:layout_below="@+id/regulation"
    ></Spinner>
    <Spinner
        android:id="@+id/year"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/course"
        android:layout_centerHorizontal="true"
        ></Spinner>
    <Spinner
        android:id="@+id/sem"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/year"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        ></Spinner>
    <Spinner
        android:id="@+id/subject"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/sem"
        android:layout_centerHorizontal="true"
        ></Spinner>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="submit"
        android:layout_below="@+id/subject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <!-- Footer aligned to bottom -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="All CopyRights Reserved"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
       />
    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>